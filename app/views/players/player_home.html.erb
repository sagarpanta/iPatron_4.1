<div data-role="page" id="home_page">
	<div data-role="header" class="common_header pc_header"  style="height:250px;width:500px; border:2px solid white"></div>
	
	<div data-role="header" class="logo_header mobile_header" data-tap-toggle="false" data-position="fixed">
		<%= image_tag 'logo_header.png', :width=> '100%' %>
		<div class="ui-bar">
			
			<h3 class="alignleft"><%= current_player.name.split()[0].capitalize + ' '+ current_player.name.split()[1].capitalize %></h3>
			
			<div class = "alignright" id='home_notification'>
					<% if Notification.where('playerid=?' ,current_player.playerid ).sum('bulb') == 0 %>
						<%= image_tag('redlight.png', :width=> '35px' , :height=> '31px' )  %>
					<% else %>
						<%= image_tag('greenlight.png', :width=> '35px' , :height=> '30px') %>
					<% end %>
			</div>
			<div id="logout_div"><%= link_to 'Log Out', signout_path, :class=>'logout' %></div>
			
			
		</div>
	</div>

	
	<div data-role="content" class="content" >
		<div class="menusHorizontal pc_footer">
			<ul>
				<li class="menu-item-h fhome"><a href="#">Home</a></li>
				<li class="menu-item-h fevent"><a href="#">Events</a></li>
				<li class="menu-item-h fpromo"><a href="#">Promotions</a></li>
				<li class="menu-item-h foffer"><a href="#">Offers</a></li>
				<li class="menu-item-h fnews"><a href="#">News</a></li>
				<li class="menu-item-h"><%= link_to 'Log Out', signout_path, :class=>'logout' %></li>
			</ul>
		</div>
		
		<div id="home_content">
			<div id="img"><%= image_tag 'detaiils.png' %></div>
		</div>
		
		<div class='elementwidth'></div>
		<div id='logoutPressed' style="display:none">no</div>

	</div>
	
	<div data-role="footer" data-position="fixed" data-tap-toggle="false" style="display:none" class="mobile_footer">
		<ul>
			<li class='fhome'><%= image_tag('home.jpg', :class=> 'footer_img', :width=> '100%') %></li>
			<li class='foffer'><%= image_tag('offers.jpg', :class=> 'footer_img',:width=> '100%') %></li>
			<li class='fevent'><%= image_tag('events.jpg',:class=> 'footer_img', :width=> '100%') %></li>
			<li class='fpromo'><%= image_tag('promo.jpg',:class=> 'footer_img', :width=> '100%') %></li>
			<li class='fnews'><%= image_tag('news.jpg', :class=> 'footer_img',:width=> '100%') %></li>
		</ul>
	</div>

	<div id='current_player' style="display:none"><%= current_player.playerid %></div>
	<div id='last_offer' style="display:none"><%= @last_offer_date %></div>
	<div id='last_event' style="display:none"><%= @last_event_date %></div>
	<div id='last_promotion' style="display:none"><%= @last_promotion_date %></div>
	<div id='last_notification' style="display:none"><%= @last_notification_date %></div>
	<div id="transfer_total_bulb_count" style="display:none"><%= Notification.where('playerid=?' ,current_player.playerid ).sum('bulb') %></div>

	<div id="unread_bulbs" style="display:none"><%= @bulbs %></div>
	<div class="page_home" style="display:none">/player_home/</div>
	<div class="page_offers" style="display:none">/offers/</div>
	<div class="page_events" style="display:none">/events/</div>
	<div class="page_promotions" style="display:none">/promotions/</div>
	<div class="page_news" style="display:none">/announcements/</div>
	<div class="page_notifications" style="display:none">/notifications/</div>

</div>




